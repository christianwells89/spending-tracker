{
  "plugins": ["jest", "react-hooks"],
  "extends": [
    "../../.eslintrc",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "react-app"
    // "react-hooks" // It recommends to not use this with CRA, but wait for them to incorporate. Might cause issues
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "moduleDirectory": ["node_modules", "../../node_modules", "src/"]
      }
    }
  }
}
